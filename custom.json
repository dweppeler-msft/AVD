{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "Location": {
        "type": "string"
      },
      "NamePrefix": {
        "type": "string"
      },
      "NumberOfVms": {
        "type": "int"
      },
      "ScriptUri": {
        "type": "string"
      },
      "Timestamp": {
        "type": "string",
        "defaultValue": "[utcNow('yyyyMMddhhmmss')]"
      },
      "VirtualMachineIndex": {
        "type": "int"
      }
    },
    "resources": [
      {
        "copy": {
          "name": "customScriptExtension",
          "count": "[length(range(parameters('VirtualMachineIndex'), parameters('NumberOfVms')))]"
        },
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "apiVersion": "2021-03-01",
        "name": "[format('{0}-{1}/CustomScriptExtension', parameters('NamePrefix'), range(parameters('VirtualMachineIndex'), parameters('NumberOfVms'))[copyIndex()])]",
        "location": "[parameters('Location')]",
        "properties": {
          "publisher": "Microsoft.Compute",
          "type": "CustomScriptExtension",
          "typeHandlerVersion": "1.10",
          "autoUpgradeMinorVersion": true,
          "settings": {
            "commandToExecute": "powershell.exe Invoke-WebRequest -Uri 'https://aka.ms/vscode-win32-x64-system-stable' -OutFile 'c:\\windows\\temp\\VSCode_x64.exe' && powershell.exe Start-Sleep -Seconds 10 && powershell.exe Start-Process -FilePath 'c:\\windows\\temp\\VSCode_x64.exe' -Args '/verysilent /suppressmsgboxes /mergetasks=!runcode' -Wait -PassThru",
            "timestamp": "[parameters('Timestamp')]"
          },
          "protectedSettings": {}
        }
      }
    ]
}
